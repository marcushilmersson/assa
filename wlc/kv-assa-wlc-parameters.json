{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "westeurope"
        },
        "networkSecurityGroupName": {
            "value": "vm-assa-wlc"
        },
        "networkSecurityGroupRules": {
            "value": [
                {
                    "name": "allowSSH",
                    "properties": {
                        "priority": 110,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceApplicationSecurityGroups": [],
                        "destinationApplicationSecurityGroups": [],
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "22"
                    }
                }
            ]
        },
        "subnetName": {
            "value": "default"
        },
        "virtualNetworkName": {
            "value": "vn-wifi"
        },
        "virtualNetworkResourceGroup": {
            "value": "rg-wifi"
        },
        "addressPrefixes": {
            "value": [
                "10.0.0.0/24"
            ]
        },
        "subnets": {
            "value": [
                {
                    "name": "default",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                }
            ]
        },
        "virtualMachineName": {
            "value": "vm-assa-wlc"
        },
        "virtualMachineRG": {
            "value": "rg-assa-vms"
        },
        "virtualMachine1Zone": {
            "value": "1"
        },
        "virtualMachineIpAddress": {
            "value": "10.0.0.4"
        },
        "osDiskType": {
            "value": "Premium_LRS"
        },
        "osDiskDeleteOption": {
            "value": "Delete"
        },
        "virtualMachineSize": {
            "value": "Standard_DS1_v2"
        },
        "nicDeleteOption": {
            "value": "Detach"
        },
        "adminUsername": {
            "value": "azureuser"
        },
        "vaultName": {
            "value": "kv-assa"
        },
        "vaultSecretName": {
            "value": "wlccredentials"
        },
        "vaultResourceGroupName": {
            "value": "rg-wifi"
        },
        "adminPassword": {
            "reference": {
            "keyVault": {
              "id": "[resourceId(subscription().subscriptionId,  parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
          },
            "secretName": "[parameters('vaultSecretName')]"
          }
        }
    }
}