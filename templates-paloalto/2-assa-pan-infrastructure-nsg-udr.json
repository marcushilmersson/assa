{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "virtualNetworkResourceGroup": {
      "type": "string",
      "metadata": {
       "description": "The resource group where the existing VNet is located."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
       "description": "The name of the existing VNet"
      }
    },
    "mgmtSubnetName": {
      "type": "string",
      "defaultValue": "sn-mgmt",
      "metadata": {
       "description": "The name of Management subnet."
      }
    },
    "mgmtSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.32/28",
      "metadata": {
        "description": "Management subnet CIDR"
       }
    },
    "mgmtSubnetNSG": {
      "type": "string",
      "defaultValue": "nsg-sn-pan-mgmt",
      "metadata": {
        "description": "Name for Management Subnet NSG"
       }
    },
    "mgmtSubnetUDR": {
      "type": "string",
      "defaultValue": "rt-sn-pan-mgmt",
      "metadata": {
         "description": "Name for Management Subnet Route Table"
        }
      },
    "srcIPinboundNSGmgmt": {
      "type": "string",
      "metadata": {
      "description": "Your source public IP address. Added to the management subnet NSG"
        },
          "defaultValue": "0.0.0.0/0"
    },
    "externalSubnetName": {
      "type": "string",
      "defaultValue": "sn-external",
      "metadata": {
        "description": "The name of External subnet"
        }
    },
    "externalSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.16/28",
      "metadata": {
        "description": "External subnet CIDR"
        }
    },
    "externalSubnetNSG": {
      "type": "string",
      "defaultValue": "nsg-sn-pan-external",
      "metadata": {
        "description": "Name for External Subnet NSG"
        }
    },
    "externalSubnetUDR": {
      "type": "string",
      "defaultValue": "rt-sn-pan-external",
      "metadata": {
         "description": "Name for Management Subnet Route Table"
        }
    },
    "internalSubnetName": {
      "type": "string",
      "defaultValue": "sn-internal",
      "metadata": {
        "description": "The name of Internal subnet"
        }
    },
    "internalSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/28",
      "metadata": {
        "description": "Internal subnet CIDR"
        }
    },
    "internalSubnetNSG": {
      "type": "string",
      "defaultValue": "nsg-sn-pan-internal",
      "metadata": {
        "description": "Name for Internal Subnet NSG"
        }
    },
    "internalSubnetUDR": {
      "type": "string",
      "defaultValue": "rt-sn-pan-internal",
      "metadata": {
        "description": "Name for Management Subnet Route Table"
        }
      }
  },
  "variables": {
      "srcIPinboundNSGmgmt": "[parameters('srcIPinboundNSGmgmt')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('mgmtSubnetNSG')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2020-04-01",
      "properties": {
        "securityRules": [
          {
            "name": "Allow-Inbound-Management-Access",
            "properties": {
              "description": "Allow management traffic",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "[variables('srcIPinboundNSGmgmt')]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
        "name": "[parameters('mgmtSubnetUDR')]",
        "type": "Microsoft.Network/routeTables",
        "apiVersion": "2020-04-01",
        "location": "[resourceGroup().location]",
          "dependsOn": [],
          "properties": {
          "disableBgpRoutePropagation": false
              }
    },
    {
        "name": "[parameters('externalSubnetNSG')]",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2020-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "securityRules": []
              }
    },
    {
        "name": "[parameters('externalSubnetUDR')]",
        "type": "Microsoft.Network/routeTables",
        "apiVersion": "2020-04-01",
        "location": "[resourceGroup().location]",
          "dependsOn": [],
          "properties": {
          "disableBgpRoutePropagation": false
              }
    },
    {
        "name": "[parameters('internalSubnetNSG')]",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2020-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "securityRules": []
              }
    },
    {
        "name": "[parameters('internalSubnetUDR')]",
        "type": "Microsoft.Network/routeTables",
        "apiVersion": "2020-04-01",
        "location": "[resourceGroup().location]",
          "dependsOn": [],
          "properties": {
          "disableBgpRoutePropagation": false
              }
    },
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2019-03-01",
        "resourceGroup": "[parameters('virtualNetworkResourceGroup')]",
        "name": "deploy-mgmt",
        "dependsOn": [
          "FWManagementSubnet"
            ],
          "properties": {
              "mode": "Incremental",
              "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "resources": [
                    {
                      "apiVersion": "2020-04-01",
                      "type": "Microsoft.Network/virtualNetworks/subnets",
                      "name": "[concat(parameters('virtualNetworkName'), '/', parameters('mgmtSubnetName'))]",
                      "location": "[resourceGroup().location]",
                      "properties": {
                        "addressPrefix": "[parameters('mgmtSubnetPrefix')]",
                        "networkSecurityGroup": {
                          "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('mgmtSubnetNSG'))]"
                        },
                        "routeTable": {
                          "id": "[resourceId('Microsoft.Network/routeTables', parameters('mgmtSubnetUDR'))]"
                        }
                      }
                    }
                  ]
                },
                  "parameters": {}
                
              }    
      },
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2019-03-01",
        "resourceGroup": "[parameters('virtualNetworkResourceGroup')]",
        "name": "deploy-ext",
        "dependsOn": [
          "FWExternalSubnet"
            ],
          "properties": {
              "mode": "Incremental",
              "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "resources": [
                    {
                      "apiVersion": "2020-04-01",
                      "type": "Microsoft.Network/virtualNetworks/subnets",
                      "name": "[concat(parameters('virtualNetworkName'), '/', parameters('externalSubnetName'))]",
                      "location": "[resourceGroup().location]",
                      "properties": {
                        "addressPrefix": "[parameters('externalSubnetPrefix')]",
                        "networkSecurityGroup": {
                          "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('externalSubnetNSG'))]"
                        },
                        "routeTable": {
                          "id": "[resourceId('Microsoft.Network/routeTables', parameters('externalSubnetUDR'))]"
                        }                        
                      }
                    }
                  ]
                },
                  "parameters": {}
                
              }    
      },
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2019-03-01",
        "resourceGroup": "[parameters('virtualNetworkResourceGroup')]",
        "name": "deploy-int",
        "dependsOn": [
          "FWInternalSubnet"
            ],
          "properties": {
              "mode": "Incremental",
              "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "resources": [
                    {
                      "apiVersion": "2020-04-01",
                      "type": "Microsoft.Network/virtualNetworks/subnets",
                      "name": "[concat(parameters('virtualNetworkName'), '/', parameters('internalSubnetName'))]",
                      "location": "[resourceGroup().location]",
                      "properties": {
                        "addressPrefix": "[parameters('internalSubnetPrefix')]",
                        "networkSecurityGroup": {
                          "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('internalSubnetNSG'))]"
                        },
                        "routeTable": {
                          "id": "[resourceId('Microsoft.Network/routeTables', parameters('internalSubnetUDR'))]"
                        }                        
                      }
                    }
                  ]
                },
                  "parameters": {}
                
              }    
      }
  ],
  "outputs": {}
}